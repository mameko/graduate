<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <context-param>
    <param-name>logLocation</param-name>
    <param-value>D:\log.txt</param-value>
  </context-param>
  <servlet>
    <servlet-name>MemSimInit</servlet-name>
    <servlet-class>assign1.MemSimInitServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MemSimInit</servlet-name>
    <url-pattern>/memsiminit</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>StartSim</servlet-name>
    <servlet-class>assign1.StartSimServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>StartSim</servlet-name>
    <url-pattern>/startSim</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Log</servlet-name>
    <servlet-class>assign1.LogServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Log</servlet-name>
    <url-pattern>/record</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SegPageInit</servlet-name>
    <servlet-class>assign2.SegPageInitServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SegPageInit</servlet-name>
    <url-pattern>/segPageInit</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>StartSim2</servlet-name>
    <servlet-class>assign2.StartSim2Servlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>StartSim2</servlet-name>
    <url-pattern>/startSim2</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Xinu</servlet-name>
    <servlet-class>assign4.SimXinuServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Xinu</servlet-name>
    <url-pattern>/xinu</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>